    <!--RecyclerView for holding list of task data-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tasks_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
